<view class="container">
  <!-- 用户 openid -->
  <view class="userinfo">
    <button class="userinfo-nickname" 
      bindgetuserinfo="onWeixinLogin"
      wx:if="{{ !isLogin }}"
      open-type="getUserInfo">
        微信授权登陆
    </button>
    <image src='{{userInfo.avatarUrl}}'
      class='userinfo-avatar'
      wx:if="{{ isLogin }}">
    </image>
  </view>
</view>
