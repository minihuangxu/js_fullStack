<swiper class="section hero white" indicator-dots="{{true}}">
  <block wx:for="{{ slides }}" wx:key="id">
    <swiper-item>
      <image  src="{{item.image}}" mode="aspectFill" />
        <view class="content center">
          <view class="sub-header">
            {{ item.sub_header }}
          </view>
          <view class="header">
            {{item.header}}
          </view>
          <view class="decription">
            {{item.decription}}
          </view>
          <view class="action">
            <button class="button">
              预约试驾
            </button>
            <button class="button primary" bindtap='readMore' data-id='{{item.id}}'>
              了解更多
            </button>
          </view>
        </view>
    </swiper-item>
  </block>
</swiper>
  