/* pages/destination/destination.wxss */
page .container{
    width: 100%;
    width: 100%;
}
.location{
    position: fixed;
    width: 100%;
    height: 88rpx;
    z-index: 99;
    top: 0;
    background-color: #fff;
    font-size: 28rpx;
    box-shadow: 3px 5px 10px #e0e0e0;
}
.location-city{
    height: 88rpx;
    position: absolute;
    width: 160rpx;
    line-height: 88rpx;
    text-align: center;
    color: #999999;
}
.location-city::after{
    content: "";
    width: 0;
    position: absolute;
    top: 48rpx;
    border-left: 4px solid transparent;
    border-right:  4px solid transparent;
    border-top: 1px solid #a4a4a4;
}
.location-input {
    height: 88rpx;
    width: 470rpx;
    margin-left: 160rpx;
    line-height: 88rpx;
    color: #999999;
}
.location-cancel{
    width: 120rpx;
    height: 88rpx;
    position: absolute;
    right: 0;
    top: 0;
    line-height: 88rpx;
    color: #999999;
}
.addressList{
    margin-top: 120rpx;
}
.destination{
    box-sizing: border-box;
    top: 50rpx;
    width: 710rpx;
    margin-left: auto;
    margin-right: auto;
    box-shadow: 3px 5px 10px #e0e0e0;
    background-color: #fff;
}
.destination-content {
    width: 712rpx;
    height: 119rpx;
    border: 1px solid #ebebeb;
    display: flex;
    align-items: center;
    border-bottom: none;
}
.container-image{
    flex: 0 0 80rpx;
    height: 119rpx;
    line-height: 119rpx;
    text-align: center;
}
.content-image image{
    width: 20rpx;
    height: 20rpx;
    opacity: 0.3;
    color: #999999;
}
.content-name {
    display: block;
    color: #333333;
    font-size: 26rpx;
}
.content-detail{
    color: #999;
    font-size: 26rpx;
    display: block;
}