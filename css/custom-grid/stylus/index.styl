@import "./reset"

$cols = 12  
$query = {
    sm:{
        query:'min-width:576px',
        containerWidth:540
    },
    md:{
        query:'min-width:768px',
        containerWidth:720
    },
    lg:{
        query:'min-width:992px',
        containerWidth:960
    },
    xl:{
        query:'min-width:1200px',
        containerWidth:1140
    }
} // 定义栅格数
// 移动设备优先
.container
  margin-left auto
  margin-right auto
  padding-left 15px
  padding-right 15px
.row
  display flex
  flex-wrap nowrap
  margin-left -15px
  margin-right -15px
  
for $v in 1..$cols
  .col-{$v}
    width (100 / 12 * $v)%

for $k, $v in $query
  @media only screen and ({$v.query})
    .container
      width unit($v['containerWidth'], px)
    for $v in 1..$cols
      .col-{$k}-{$v}
        width (100 / 12 * $v)%

