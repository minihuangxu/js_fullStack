.ui.hero
  background: #f0f0f0
  .item
    position: relative
    overflow: hidden
    .content
      display: flex
      align-items: center
      height 696px
    .header
      font-size: 48px
      margin: 0
      margin-bottom: 16px
    .sub.header
      font-size: 18px
      text-transform: uppercase
      letter-spacing: 3px
      margin-bottom: 8px
    .description
      font-size: 18px
      margin-bottom: 32px
      font-weight: 600
    img
        width 100%
        height 100%
        position absolute
        top 0
        bottom 0
        margin auto
        object-fit cover
    .ui.container
        position relative
        z-index 2